<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/message_item_tou"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/message_item_img"
        android:src="@mipmap/receiver"
        android:layout_width="50dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="50dp"/>
    <TextView
        android:layout_toRightOf="@+id/message_item_img"
        android:id="@+id/message_item_name"
        android:text="杨雪"
        android:layout_margin="@dimen/dp_10"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/message_item_time"
        android:text="15:28"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/message_item_message"
        android:maxLines="1"
        android:layout_toRightOf="@+id/message_item_img"
        android:layout_below="@+id/message_item_name"
        android:layout_width="wrap_content"
        android:text="多喝烫水把你"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/message_item_hint"
        android:visibility="invisible"
        android:background="@mipmap/xiaoxitishi"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:text="20"
        android:layout_height="wrap_content"/>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CDCDCD"
        />
</RelativeLayout>