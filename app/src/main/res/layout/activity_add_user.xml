<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.AddUserActivity">
    <include layout="@layout/titlebar"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:id="@+id/user_search_keyword"
        android:layout_margin="@dimen/dp_10"
        android:hint="Searchnig"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"/>
<ImageView
    android:id="@+id/user_search_clean"
    android:layout_margin="@dimen/sp_12"
    android:src="@mipmap/clean"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_search_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>